{
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "https://upload.wikimedia.org/wikipedia/commons/thumb/0/08/Cisco_logo_blue_2016.svg/1200px-Cisco_logo_blue_2016.svg.png",
                            "size": "medium"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "https://www.pngfind.com/pngs/m/492-4925756_charity-recommendations-charity-logo-png-transparent-png.png",
                            "size": "medium",
                            "horizontalAlignment": "right",
                            "width": "89px",
                            "height": "48px"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Cisco Manager Charity Match Drive 2019",
            "weight": "Bolder",
            "size": "Medium",
            "horizontalAlignment": "Center"
        },
        {
            "type": "TextBlock",
            "text": "To get started, please tell us how much will you be contributing to charity in FY20?\n\n(between 28th Aug'19 and 25th July'20)",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "Amount:-",
            "weight": "Lighter"
        },
        {
          "type": "Input.Number",
          "placeholder": "Amount",
          "id": "amount"
        },
        {
            "type": "TextBlock",
            "text": "*Please reply in dollars and cents.",
            "size": "Small",
            "weight": "Lighter"
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.Submit",
                    "title": "Submit",
                    "style": "positive",
                    "data":{
                      "buttonId": "AmountSubmit"
                    }
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}
{
    "type": "AdaptiveCard",
    "version": "1.0",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "https://upload.wikimedia.org/wikipedia/commons/thumb/0/08/Cisco_logo_blue_2016.svg/1200px-Cisco_logo_blue_2016.svg.png",
                            "size": "medium"
                        }
                    ]
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Cisco Manager Charity Match Drive 2022",
            "weight": "Bolder",
            "size": "Medium",
            "horizontalAlignment": "Center",
            "spacing": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "Hello!! Welcome to Cisco's 2022 Charity Match Drive. My name is Charity Bot.",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "Please select your role.",
            "horizontalAlignment": "Left",
            "spacing": "Medium"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Employee",
                                    "id": "employeeBtn",
                                    "data":{
                                        "buttonId": "employeeBtn"
                                      }
                                }
                            ]
                        }
                    ],
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.Submit",
                                    "title": "Manager",
                                    "id": "managerBtn",
                                    "data":{
                                        "buttonId": "managerBtn"
                                      }
                                }
                            ]
                        }
                    ],
                    "horizontalAlignment": "Center"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
